<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="800dp"
    android:layout_height="1140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_dog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_bg_1"
            >
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/namedog"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:hint="Name dinner"
            android:textSize="56dp"></TextView>
        <TextView
            android:id="@+id/doginfomation"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:hint="Infomation"
            android:textSize="56dp"></TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="6$"
            android:textSize="56dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginLeft="550dp"></TextView>
    </LinearLayout>

</LinearLayout>