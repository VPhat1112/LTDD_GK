<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="800dp"
    android:layout_height="1280dp"
    tools:context="com.example.ktra_gk.MainActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="250dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"

                android:background="@drawable/circle"
                android:src="@drawable/avatar" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="320dp"
            android:text="Sign in"
            android:textColor="@color/orange"
            android:textSize="50dp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:id="@+id/Khungdangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernametextid"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Username"
                    android:textSize="56dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:textSize="50dp"
                    app:hintEnabled="true"

                    app:counterEnabled="true"
                    android:drawableTint="#3ca40f"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_people_24"
                    android:maxLines="1"
                    android:lines="1"
                    android:textColorHighlight="#7cff88"
                    android:hint="Nhập tài khoản"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/passwordtextid"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Password"
                    android:textSize="56dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:textSize="50dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:hint="Nhập password"
                    app:counterEnabled="true"
                    app:errorEnabled="true"
                     />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/Khungdangnhap"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/signin"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_below="@+id/password1"

                android:layout_marginTop="50dp"
                android:backgroundTint="@color/startblue"
                android:text="Sign in"
                android:textColor="@color/graylight"
                android:textSize="34dp"></Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:text="Do you have a account?"
                    android:paddingTop="50dp"
                    android:textSize="35dp">

                </TextView>

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:drawableRight="@drawable/ic_baseline_play_arrow_24"
                    android:paddingTop="30dp"

                    android:text="Signup"
                    android:textSize="45dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>